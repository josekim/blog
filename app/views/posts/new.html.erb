<h1 class="page-header">Create a New Post </h1>
<div class="well col-lg-10 col-md-10 col-sm-10 col-xs-10">
<%= form_for @post, url: {action: "create"}, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <label for="title" class="col-sm-1 control-label">Title</label>
    <div class="col-sm-10">
      <%= f.text_field :title,class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="Body" class="col-sm-1 control-label">Body</label>
    <div class="col-sm-10">
     <%= f.text_area :body, size: "60x12",class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="tags" class="col-sm-1 control-label">tags</label>
    <div class="col-sm-10">
      <%= text_field (:tags),"tags", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit "Create",class: "btn btn-default" %>
    </div>
  </div>
<% end %>
</div>

